{
  "name": "fivefifteen/basis",
  "version": "0.0.1",
  "description": "A WordPress boilerplate. Get a local dockerized WordPress project up and running complete with secrets encryption, dependency management/compilation, and more by running a single command.",
  "authors": [
    {
      "name": "Five Fifteen",
      "email": "hello@fivefifteen.com",
      "homepage": "https://fivefifteen.com"
    },
    {
      "name": "Kodie Grantham",
      "email": "kodie.grantham@gmail.com",
      "homepage": "https://kodieg.com"
    }
  ],
  "keywords": [
    "boilerplate",
    "example",
    "starter",
    "template",
    "wordpress"
  ],
  "homepage": "https://github.com/fivefifteen/basis",
  "license": "GPL-2.0",
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "extra": {
    "installer-paths": {
      "content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "scripts": {
    "post-create-project-cmd": "php setup.php"
  },
  "require": {
    "php": ">=8.1",
    "composer/installers": "^2.3",
    "fivefifteen/primer": "dev-main"
  }
}